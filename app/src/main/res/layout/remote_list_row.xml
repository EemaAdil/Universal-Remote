<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:id="@+id/parent"
    android:background="@drawable/btnedt"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_margin="5dp">

    <ImageView
        android:id="@+id/output_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/output_logo" />

    <LinearLayout
        android:id="@+id/go_to_remote"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_toLeftOf="@+id/output_more"
        android:layout_toRightOf="@+id/output_logo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/avenirltstd_medium"
            android:gravity="bottom"
            android:singleLine="true"
            android:text="Samsung"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:fontFamily="@font/avenirltstd_medium"
            android:gravity="top"
            android:singleLine="true"
            android:text="Samsung"
            android:textColor="@color/textblack"
            android:textSize="15dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/output_more"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true"
        android:tint="@color/black"
        android:src="@drawable/output_more" />

    <RelativeLayout
        android:id="@+id/subparent"
        android:background="@drawable/btnedt1"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/remote_rename"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:backgroundTint="@color/white"
            android:background="@drawable/remote_edit_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/avenirltstd_medium"
                android:text="Rename"
                android:textColor="@color/black"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/remote_delete"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/white"
            android:layout_toRightOf="@+id/remote_rename"
            android:background="@drawable/remote_edit_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/avenirltstd_medium"
                android:text="Delete"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/cancel_edit"
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_cross" />

    </RelativeLayout>

</RelativeLayout>
