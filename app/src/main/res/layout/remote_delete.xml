<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" app:cardCornerRadius="10dp" app:cardElevation="10dp" app:cardUseCompatPadding="true">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/color1" android:gravity="center" android:layout_width="match_parent" android:layout_height="50dp" android:text="TV REMOTE DELETE" android:fontFamily="@font/avenirltstd_medium"/>
        <LinearLayout android:gravity="center_horizontal" android:layout_gravity="center_horizontal" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <TextView android:textSize="17dp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delete the Remote " android:fontFamily="@font/avenirltstd_medium"/>
            <TextView android:textSize="17dp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:id="@+id/delete_remote_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="SAMSUNG TV" android:fontFamily="@font/avenirltstd_medium"/>
            <TextView android:textSize="17dp" android:textColor="@color/black" android:gravity="center" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" ?" android:fontFamily="@font/avenirltstd_medium"/>
        </LinearLayout>
        <RelativeLayout android:gravity="center_horizontal" android:visibility="visible" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:layout_marginBottom="10dp">
            <RelativeLayout android:id="@+id/delete_no" android:background="@drawable/delete_remote_bg" android:layout_width="100dp" android:layout_height="40dp" android:layout_centerVertical="true">
                <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="No" android:layout_centerInParent="true" android:fontFamily="@font/avenirltstd_medium"/>
            </RelativeLayout>
            <RelativeLayout android:id="@+id/delete_yes" android:background="@drawable/delete_remote_bg" android:layout_width="90dp" android:layout_height="40dp" android:layout_marginLeft="50dp" android:layout_toRightOf="@+id/delete_no" android:layout_centerVertical="true">
                <TextView android:textSize="17dp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="YES" android:layout_centerInParent="true" android:fontFamily="@font/avenirltstd_medium"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
